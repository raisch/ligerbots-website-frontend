{
  "plugins": [ "plugins/markdown" ],
  "source": {
    "include": [ "src" ],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules/|docs)"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": [ "jsdoc", "closure" ]
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "--disabled--template": "node_modules/daybrush-jsdoc-template"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "theme": "default"
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": true,
    "idInHeadings": true
  }
}
