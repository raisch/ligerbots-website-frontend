{
  "name": "ligerbots-website-frontend",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "env": "env",
    "dev": "npx vite dev",
    "start": "PORT=4000 node ./build/index.js > site.log 2>&1 &",
    "build": "npx vite build",
    "preview": "npx vite preview",
    "check": "npx svelte-kit sync && npx svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "npx svelte-kit sync && npx svelte-check --tsconfig ./tsconfig.json --watch",
    "doc:build": "npx jsdoc -c jsdoc.json  --readme ./README.md src/* -r -d docs",
    "doc:clean": "rm -rf docs",
    "doc:open": "open docs/index.html",
    "doc:rebuild": "pnpm run doc:clean && pnpm run doc:build",
    "docker:build": "docker build -t ligerbots .",
    "docker:start": "docker run -d --name=\"ligerbots\" --restart=unless-stopped -p 4000:4000 ligerbots",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=website)",
    "docker:clean": "pnpm run docker:stop && docker rm ligerbots && docker rmi ligerbots",
    "docker:clean-all": "docker system prune -a -f"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.2",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@tailwindcss/typography": "^0.5.14",
    "@types/node": "^22.5.5",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-n": "^15.7.0",
    "svelte": "^4.2.7",
    "svelte-check": "^4.0.0",
    "svelte-icons-pack": "^3.1.3",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vite-plugin-url-redirect": "^0.1.0"
  },
  "dependencies": {
    "@directus/sdk": "^17.0.1",
    "@tailwindcss/vite": "^4.0.14",
    "@types/debug": "^4.1.12",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "tailwindcss": "^4.0.14"
  }
}
